<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_image_nouse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


            <ImageView
                android:id="@+id/lol"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/lol"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="#55000000"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="89"
                    android:textSize="11dip"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_white"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:background="#55000000"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/date_nouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:text="Create Date"
                    android:textSize="11dip"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/text_white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="19dp"
                    android:text="2016.12.27"
                    android:textSize="11dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_white"/>

            </RelativeLayout>

            <View
                android:id="@+id/section_line1"
                android:layout_below="@id/lol"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#212121"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>

            <TextView
                android:id="@+id/txt_notice_nouse"
                android:layout_below="@id/section_line1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:text="Notice"
                android:textStyle="bold"
                android:textAllCaps="false"
                >
            </TextView>

            <View
                android:id="@+id/section_line2"
                android:layout_below="@id/txt_notice_nouse"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#212121"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                ></View>

            <RelativeLayout
                android:id="@+id/notice_layout_nouse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/section_line2"
                android:layout_marginTop="5dp">

                <com.example.kwoncheolhyeok.core.PeopleFragment.SquareImageView
                    android:id="@+id/notice_picture"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/l"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/notice_subject"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/notice_picture"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:text="(Must read!!) Welcome to League of Legende Club. Please Read this notice"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/notice_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notice_subject"
                    android:layout_toRightOf="@id/notice_picture"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:text="Seo Gang Jun"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/notice_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notice_subject"
                    android:layout_toRightOf="@id/notice_writer"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:text="/ 2016.12.27"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/count_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="110"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/section_line3"
                android:layout_below="@id/notice_layout_nouse"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#212121"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>


</RelativeLayout>
