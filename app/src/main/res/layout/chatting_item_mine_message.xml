<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatting_mine_message_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check"
            android:layout_gravity="bottom"
            android:minEms="2"
            android:text="13:00" />
    </LinearLayout>


    <com.example.kwoncheolhyeok.core.MessageActivity.util.ChatMessageView
        android:id="@+id/chatMessageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cmv_backgroundColor="@color/message_color"
        app:cmv_backgroundColorPressed="#FFFFFF"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left"
        app:cmv_cornerRadius="9dp"
        app:cmv_showArrow="false">

        <TextView
            android:id="@+id/chatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="20"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="15.5dp" />
    </com.example.kwoncheolhyeok.core.MessageActivity.util.ChatMessageView>

</LinearLayout>
</LinearLayout>