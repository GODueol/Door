<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lol"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/lol"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="#CCFFFFFF"
        >

        <com.example.kwoncheolhyeok.core.PeopleFragment.SquareImageView
            android:id="@+id/member_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/a"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />

            <TextView
                android:id="@+id/member_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/member_image"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="[ General member ]"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BARO"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/member_type"
                android:layout_alignStart="@+id/member_type" />

            <TextView
                android:id="@+id/member_join_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/member_image"
                android:layout_alignBottom="@+id/member_image"
                android:layout_marginLeft="15dp"
                android:text="2016.12.29"
                android:textSize="12dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_horiz_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />

    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_nouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lol"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_arrow_drop_down_black_18dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lol"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/btn_nouse"
        android:text="Member List"
        android:textSize="13dp"/>

</RelativeLayout>
