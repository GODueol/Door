<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">

    <com.example.kwoncheolhyeok.core.MessageActivity.chat_message_view.ChatMessageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chatMessageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:cmv_arrowGravity="start"
        app:cmv_arrowMargin="3dp"
        app:cmv_arrowPosition="right"
        app:cmv_backgroundColor="@color/message_color"
        app:cmv_backgroundColorPressed="#FFFFFF"
        app:cmv_contentPadding="10dp"
        app:cmv_cornerRadius="9dp"
        app:cmv_showArrow="false">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="15.5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </com.example.kwoncheolhyeok.core.MessageActivity.chat_message_view.ChatMessageView>

</LinearLayout>