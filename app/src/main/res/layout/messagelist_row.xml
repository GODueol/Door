<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:orientation="horizontal"
    android:background="@color/gray">

    <com.example.kwoncheolhyeok.core.PeopleFragment.SquareImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingLeft="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/a"/>

    <TextView
        android:id="@+id/chat_content"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="60dp"
        android:text="chat_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/userNick"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/chat_content"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="userNick"
        android:textSize="14dp"
        android:layout_marginTop="0dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_profile"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/profile_image"
        android:text="userProfile"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userProfile"
        android:layout_toRightOf="@+id/profile_image"
        android:text="date"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_dehaze_black_24dp"
        android:layout_centerVertical="true"
        android:clickable="true"
        />

</RelativeLayout>