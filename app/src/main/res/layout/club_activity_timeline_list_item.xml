<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/id_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

    <com.example.kwoncheolhyeok.core.PeopleFragment.SquareImageView
        android:id="@+id/pic_writer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/j"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/pic_writer"
            >

            <TextView
                android:id="@+id/id_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BARO"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/date_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="2016.12.28 15:36"
                android:textSize="10sp"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contents_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_layout"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    <TextView
        android:id="@+id/contents_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, nice to meet you. I'm BARO."
        android:textSize="17sp"
        android:maxLines="10"
        android:ellipsize="end"
        android:textAllCaps="false"
        />
    </RelativeLayout>

    <TextView
        android:id="@+id/reply_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/contents_layout"
        />


    <RelativeLayout
        android:id="@+id/reply_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/reply_count"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <View
            android:id="@+id/section_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#212121"
            ></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/section_line1"
            android:layout_marginTop="5dp"
            >

            <com.example.kwoncheolhyeok.core.PeopleFragment.SquareImageView
                android:id="@+id/pic_reply"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/g"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/pic_reply"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:id="@+id/reply_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to our League of Legend Club Baro. Do your best play!"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

                <RelativeLayout
                    android:id="@+id/id_date_reply_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/reply_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kim Min Suk"
                    android:textSize="10sp"/>


                <TextView
                    android:id="@+id/reply_date"
                    android:layout_toRightOf="@id/reply_id"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ 2016.12.28 16:06"
                    android:textSize="10sp"/>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/section_line2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/reply_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="#212121"
        ></View>

</RelativeLayout>




















