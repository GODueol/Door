<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="3dp"
    android:orientation="horizontal" >

    <com.example.kwoncheolhyeok.core.PeopleFragment.SquareImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:background="@drawable/a"/>

    <TextView
        android:id="@+id/lblListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NickName"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignTop="@+id/profile_image"
        android:layout_alignLeft="@+id/sub_profile"
        android:layout_alignStart="@+id/sub_profile" />

    <TextView
        android:id="@+id/sub_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblListItem"
        android:layout_toLeftOf="@+id/item_menu_btn"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:text="sub_profile"
        android:textSize="13.5dp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:maxLines="3"

        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016_12_02_18:56"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_alignLeft="@+id/sub_profile"
        android:layout_alignStart="@+id/sub_profile" />

    <ImageView
        android:id="@+id/item_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:src="@drawable/ic_dehaze_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />



