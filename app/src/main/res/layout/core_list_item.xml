<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <com.example.kwoncheolhyeok.core.PeopleFragment.SquareImageView
        android:id="@+id/core_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
    />

    <TextView
        android:id="@+id/core_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChangRim"
        android:textSize="15.5dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/core_pic"
        android:layout_alignLeft="@+id/section_line1"
        android:layout_alignStart="@+id/section_line1"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/sub_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 / 178 / 69 / muscle"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/core_id"
        android:layout_alignLeft="@+id/core_id"
        android:layout_alignStart="@+id/core_id" />

    <ImageButton
        android:id="@+id/setting"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/setting"
        android:layout_alignBottom="@+id/sub_profile"
        android:layout_alignRight="@+id/section_line1"
        android:layout_alignEnd="@+id/section_line1" />


    <View
        android:id="@+id/section_line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_toRightOf="@+id/core_pic"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/core_pic"
        android:background="#BDBDBD"></View>

    <TextView
        android:id="@+id/core_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요 반갑습니다"
        android:textSize="15.5dp"
        android:layout_below="@+id/core_pic"
        android:layout_alignLeft="@+id/section_line2"
        android:layout_alignStart="@+id/section_line2"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <ImageView
        android:id="@+id/core_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/core_contents"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_launcher"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/media_player_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/core_img"
        android:text="미디어 플레이어가 있을 자리"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        />


    <View
        android:id="@+id/section_line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/core_date"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#BDBDBD"
        ></View>

    <TextView
        android:id="@+id/core_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.01.17 16:33"
        android:textSize="10dp"
        android:layout_below="@+id/media_player_txt"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@+id/section_line2"
        android:layout_alignEnd="@+id/section_line2"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:id="@+id/heart_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_line2"
        >

    <com.like.LikeButton
        android:id="@+id/core_heart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:icon_size="15dp"
        app:anim_scale_factor="2.5"
        app:icon_type="heart"
        />

    <ImageButton
        android:id="@+id/heart_count"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/heart_on"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/heart_count_txt"
        android:layout_marginRight="8dp"
        />

        <TextView
            android:id="@+id/heart_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

    <View
        android:id="@+id/section_line3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/heart_btn_layout"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#BDBDBD"
        ></View>






</RelativeLayout>

